<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbarTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/dim8_size</item>
    </style>

    <style name="bodyText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:textColor">@color/grayColor</item>
        <item name="android:layout_marginStart">@dimen/dim8_size</item>
        <item name="android:layout_marginEnd">@dimen/dim8_size</item>
        <item name="android:layout_marginBottom">@dimen/dim8_size</item>
    </style>

    <style name="errorText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="errorSubtitleText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="nameShowText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/dim8_size</item>
        <item name="android:paddingStart">@dimen/dim8_size</item>
        <item name="android:paddingBottom">@dimen/dim8_size</item>
        <item name="android:paddingEnd">@dimen/dim8_size</item>
    </style>

    <style name="ratingText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ratingStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:drawableLeft">@drawable/ic_star_rating</item>
        <item name="android:drawablePadding">@dimen/dim2_size</item>
        <item name="android:textColor">@color/ratingColor</item>
    </style>
</resources>
